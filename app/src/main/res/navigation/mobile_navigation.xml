        tools:layout="@layout/fragment_pagos" >
        <action
            android:id="@+id/action_nav_pagos_to_nav_contratos"
            app:destination="@id/nav_contratos" />
    </fragment>

    <fragment
        android:id="@+id/nav_inquilino"
        android:name="com.ezediaz.inmobiliaria.ui.inquilino.InquilinoFragment"
        android:label="Detalle del inquilino"
        tools:layout="@layout/fragment_inquilino" >
        <action
            android:id="@+id/action_nav_inquilino_to_nav_contratos"
            app:destination="@id/nav_contratos" />
    </fragment>

    <fragment
        android:id="@+id/nav_salir"
        android:name="com.ezediaz.inmobiliaria.ui.deslogeo.SalirFragment"
        android:label="Deslogueo"
