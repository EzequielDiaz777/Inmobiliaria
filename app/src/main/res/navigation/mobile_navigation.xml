        android:name="com.ezediaz.inmobiliaria.ui.perfil.PerfilFragment"
        android:label="Mi perfil"
        tools:layout="@layout/fragment_perfil" />

    <fragment
        android:id="@+id/nav_cambiar_password"
        android:name="com.ezediaz.inmobiliaria.ui.perfil.CambiarPasswordFragment"
        android:label="Cambiar contraseÃ±a"
        tools:layout="@layout/fragment_cambiar_password" />

    <fragment
        android:id="@+id/nav_inmuebles"
        android:name="com.ezediaz.inmobiliaria.ui.inmueble.InmueblesFragment"
        android:label="Lista de inmuebles"
        tools:layout="@layout/fragment_inmuebles">
        <action
            android:id="@+id/action_inmueblesFragment_to_inmuebleFragment"
            app:destination="@id/nav_inmueble" />
    </fragment>

    <fragment
        android:id="@+id/nav_inmueble"
        android:name="com.ezediaz.inmobiliaria.ui.inmueble.InmuebleFragment"
        android:label="Detalle del inmueble"
        tools:layout="@layout/fragment_inmueble" >
        <action
            android:id="@+id/action_nav_inmueble_to_nav_inmuebles"
            app:destination="@id/nav_inmuebles" />
    </fragment>

    <fragment
        android:id="@+id/nav_contratos"
        android:name="com.ezediaz.inmobiliaria.ui.contrato.ContratosFragment"
        android:label="Lista de contratos"
        tools:layout="@layout/fragment_contratos" >
        <action
            android:id="@+id/action_nav_contratos_to_nav_contrato"
            app:destination="@id/nav_contrato" />
    </fragment>

    <fragment
        android:id="@+id/nav_contrato"
        android:name="com.ezediaz.inmobiliaria.ui.contrato.ContratoFragment"
