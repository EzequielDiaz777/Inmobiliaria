<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItemPago"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/card_background_color"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:id="@+id/itemPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:textAlignment="center"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/tvNumeroDePago"
            style="@style/Widget.AppCompat.TextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:text="NÃºmero de pago"
            android:textColor="@color/text_primary_color" />

        <TextView
            android:id="@+id/tvNumeroDePagoInfo"
            style="@style/Widget.AppCompat.TextView.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/text_secondary_color" />

        <TextView
            android:id="@+id/tvImporteDelPago"
            style="@style/Widget.AppCompat.TextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:text="Importe"
            android:textColor="@color/text_primary_color" />

        <TextView
            android:id="@+id/tvImporteDelPagoInfo"
            style="@style/Widget.AppCompat.TextView.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/text_secondary_color" />

        <TextView
            android:id="@+id/tvFechaDePago"
            style="@style/Widget.AppCompat.TextView.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            android:text="Fecha de pago"
            android:textColor="@color/text_primary_color" />

        <TextView
            android:id="@+id/tvFechaDePagoInfo"
            style="@style/Widget.AppCompat.TextView.Body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/text_secondary_color" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
